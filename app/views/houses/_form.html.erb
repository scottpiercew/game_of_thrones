<%= form_for @house do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :words %>
  <%= f.text_area :words, size: "40x8" %>

  <%= f.label :region %>
  <%= f.text_field :region %>

  <%= f.label :img_url %>
  <%= f.text_field :img_url %>

  <%= f.submit "Submit" %>

<% end %>
